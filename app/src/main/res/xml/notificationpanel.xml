<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.wubydax.romcontrol.v2.prefs.ImageHeaderPreference app:imageSource="@drawable/android"/>
    <com.wubydax.romcontrol.v2.prefs.MySwitchPreference android:defaultValue="false" android:key="asc_notification_custom_bg" android:summaryOff="@string/disabled" android:summaryOn="@string/enabled" android:title="@string/Enablecustombackground"/>
    <PreferenceCategory android:dependency="asc_notification_custom_bg" android:title="@string/Generalbgpreferences">
        <com.wubydax.romcontrol.v2.prefs.MyListPreference android:defaultValue="0" android:entries="@array/custom_bg_type_entries" android:entryValues="@array/custom_bg_type_values" android:key="asc_notification_custom_bg_type" android:title="@string/Backgroundtype" app:dependentValue="0"/>
        <com.wubydax.romcontrol.v2.prefs.MySeekBarPreference android:defaultValue="255" android:key="asc_notification_bg_opacity" android:title="@string/Backgroundopacity" app:maxValue="255" app:minValue="0"/>
    </PreferenceCategory>
    <PreferenceCategory android:dependency="asc_notification_custom_bg" android:title="@string/Customimagepreferences">
        <com.wubydax.romcontrol.v2.prefs.UriSelectionPreference android:key="asc_notification_bg_image_uri" android:title="@string/SelectBgimage"/>
        <com.wubydax.romcontrol.v2.prefs.MyListPreference android:defaultValue="0" android:entries="@array/crop_entries" android:entryValues="@array/crop_values" android:key="asc_notification_bg_crop_type" android:title="@string/SetImageScalingType"/>
    </PreferenceCategory>
    <PreferenceCategory android:dependency="asc_notification_custom_bg" android:title="@string/Colorandgradientpreferences">
        <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:defaultValue="#00000000" android:dependency="asc_notification_custom_bg_type" android:key="asc_notification_bg_primary_color" android:title="@string/Selectprimarycolor"/>
        <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:defaultValue="#00000000" android:dependency="asc_notification_custom_bg_type" android:key="asc_notification_second_gradient_color" android:title="@string/SecondaryColor"/>
        <com.wubydax.romcontrol.v2.prefs.MyListPreference android:defaultValue="0" android:dependency="asc_notification_custom_bg_type" android:entries="@array/gradient_entries" android:entryValues="@array/gradient_values" android:key="asc_notification_bg_gradient_orientation" android:title="@string/Gradientorientation"/>
    </PreferenceCategory>
</PreferenceScreen>