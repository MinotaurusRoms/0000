<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<!--Statusbar-->
    <PreferenceScreen android:icon="@drawable/ic_statusbar" android:title="Statusbar" android:summary="Clock, Traffic meter, Battery type...">
        <com.wubydax.romcontrol.v2.prefs.ImageHeaderPreference app:imageSource="@drawable/android"/>
        <PreferenceScreen android:title="Statusbar icon color">
                <com.wubydax.romcontrol.v2.prefs.MySwitchPreference android:title="Separate or Global colors" android:key="asc_is_global_sb_color" android:defaultValue="true" android:summaryOn="Seperate colors" android:summaryOff="Global colors" app:packageNameToKill="com.android.systemui" app:isSilent="false"/>
            <PreferenceCategory android:title="Global color"/>
                <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Global color" android:key="asc_global_sb_color" android:defaultValue="#ffffff" app:packageNameToKill="com.android.systemui" app:isSilent="false"/>
            <PreferenceCategory android:title="Separate color"/>
                <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Clock Color" android:defaultValue="#ffffff" android:key="asc_clock_color" android:dependency="asc_is_global_sb_color" app:packageNameToKill="com.android.systemui" app:isSilent="false"/>
                <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Status Icons Color" android:defaultValue="#ffffff" android:key="asc_status_icons_color" android:dependency="asc_is_global_sb_color" app:packageNameToKill="com.android.systemui" app:isSilent="false"/>
                <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Wifi Signal Color" android:defaultValue="#ffffff" android:key="asc_wifi_signal_color" android:dependency="asc_is_global_sb_color" app:packageNameToKill="com.android.systemui" app:isSilent="false"/>
                <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Mobile Signal Color" android:defaultValue="#ffffff" android:key="asc_mobile_signal_color" android:dependency="asc_is_global_sb_color" app:packageNameToKill="com.android.systemui" app:isSilent="false"/>
                <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Mobile Type and Arrows Color" android:defaultValue="#ffffff" android:key="asc_mobile_type_color" android:dependency="asc_is_global_sb_color" app:packageNameToKill="com.android.systemui" app:isSilent="false"/>
                <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Roaming Icon Color" android:defaultValue="#ffffff" android:key="asc_mobile_roaming_color" android:dependency="asc_is_global_sb_color" app:packageNameToKill="com.android.systemui" app:isSilent="false"/>
                <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Airplanemode Color" android:defaultValue="#ffffff" android:key="asc_airplane_mode_color" android:dependency="asc_is_global_sb_color" app:packageNameToKill="com.android.systemui" app:isSilent="false"/>
                <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Notification Icons Color" android:defaultValue="#ffffff" android:key="asc_notification_icons_color" android:dependency="asc_is_global_sb_color" app:rebootDevice="true" app:packageNameToKill="com.android.systemui" app:isSilent="false"/>
                <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Battery Percent Color" android:defaultValue="#ffffff" android:key="asc_battery_percent_color" android:dependency="asc_is_global_sb_color" app:packageNameToKill="com.android.systemui" app:isSilent="false"/>
        </PreferenceScreen>
        <PreferenceScreen android:title="Statusbar Clock Options">
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference android:title="Tap on clock" android:key="asc_tap_clock_launcher" android:defaultValue="true" android:summaryOn="Tap to launch app" android:summaryOff="Tap Clock Launcher is disabled" app:packageNameToKill="com.android.systemui" app:isSilent="false" />
            <com.wubydax.romcontrol.v2.prefs.IntentDialogPreference android:key="asc_press_clock_custom_app" android:title="Tap Clock App Selection" android:dependency="asc_tap_clock_launcher" app:intentSeparator="\##" />
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference android:title="Show Clock and Date" android:key="asc_status_bar_clock" android:defaultValue="true" android:summaryOn="Clock shown" android:summaryOff="Clock hidden" />
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference android:title="Uppercase Text Clock" android:key="asc_normal_upper" android:dependency="asc_status_bar_clock" android:defaultValue="false" android:summaryOn="Uppercase enabled" android:summaryOff="Disabled" />
            <com.wubydax.romcontrol.v2.prefs.MyListPreference android:entries="@array/clock_format_entries" android:title="Clock Format" android:key="asc_statusbar_clock_format" android:dependency="asc_status_bar_clock" android:defaultValue="1" android:entryValues="@array/clock_format_values" />
            <com.wubydax.romcontrol.v2.prefs.MyListPreference android:entries="@array/clock_style_entries" android:title="Clock Location" android:key="asc_statusbar_clock_style" android:dependency="asc_status_bar_clock" android:defaultValue="0" android:entryValues="@array/clock_style_values" />
            <com.wubydax.romcontrol.v2.prefs.MyListPreference android:entries="@array/entries_status_bar_am_pm" android:title="Clock AM/PM" android:key="asc_statusbar_clock_am_pm_style" android:dependency="asc_status_bar_clock" android:defaultValue="2" android:entryValues="@array/values_status_bar_am_pm" />
            <com.wubydax.romcontrol.v2.prefs.MyListPreference android:entries="@array/clock_font_style_entries" android:title="Clock Font Style" android:key="asc_statusbar_clock_font_style" android:dependency="asc_status_bar_clock" android:defaultValue="5" android:entryValues="@array/clock_font_style_values" />
            <com.wubydax.romcontrol.v2.prefs.MySeekBarPreference android:title="Clock Scaling" android:key="asc_statusbar_clock_scale" android:summary="Adjust clock size" android:dependency="asc_status_bar_clock" android:defaultValue="15" app:minValue="5" app:maxValue="25" app:unitsValue="dp" />
            <com.wubydax.romcontrol.v2.prefs.MyListPreference android:entries="@array/clock_date_display_entries" android:title="Date Display Type" android:key="asc_statusbar_clock_date_display" android:dependency="asc_status_bar_clock" android:defaultValue="0" android:entryValues="@array/clock_date_display_values" />
            <com.wubydax.romcontrol.v2.prefs.MyListPreference android:entries="@array/clock_date_style_entries" android:title="Date Style" android:key="asc_statusbar_clock_date_style" android:dependency="asc_status_bar_clock" android:defaultValue="0" android:entryValues="@array/clock_date_style_values" />
            <com.wubydax.romcontrol.v2.prefs.MyListPreference android:entries="@array/clock_date_format_entries_values" android:title="Date Format" android:key="asc_statusbar_clock_date_format" android:dependency="asc_status_bar_clock" android:defaultValue="EEE" android:entryValues="@array/clock_date_format_entries_values" />
        </PreferenceScreen>
        <PreferenceScreen android:title="Network traffic preferences">
            <com.wubydax.romcontrol.v2.prefs.MyListPreference android:title="Displayed traffic info left" android:key="asc_network_traffic_state" android:defaultValue="0" app:dependentValue="0" android:entryValues="@array/traffic_state_values" android:entries="@array/traffic_state_items"/>
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference android:title="Display data in Bytes" android:summaryOff="Displayed in Bits (default)" android:summaryOn="Displayed in Bytes" android:defaultValue="false" android:key="asc_network_traffic_unit" />
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference android:title="Show traffic arrows" android:key="asc_network_traffic_show_arrows" android:defaultValue="true" android:summaryOff="Arrows hidden" android:summaryOn="Arrows shown" />
            <com.wubydax.romcontrol.v2.prefs.MyListPreference android:title="Arrows position" android:key="asc_network_traffic_arrows_position" android:defaultValue="0" android:entryValues="@array/arrow_position_values" android:entries="@array/arrow_position_entries"/>
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference android:title="Autohide on low traffic" android:key="asc_network_traffic_autohide" android:defaultValue="false" android:summaryOff="Displayed always" android:summaryOn="Autohide enabled"/>
            <com.wubydax.romcontrol.v2.prefs.MySeekBarPreference android:title="Autohide threshold" app:unitsValue="Kb" app:maxValue="100" android:key="asc_network_traffic_threshold" android:defaultValue="10" />
            <com.wubydax.romcontrol.v2.prefs.MyListPreference android:title="Font style" android:key="asc_network_traffic_text_style" android:defaultValue="0" android:entries="@array/traffic_style_entries" android:entryValues="@array/traffic_style_entry_values"/>
            <com.wubydax.romcontrol.v2.prefs.MySeekBarPreference android:title="Text size scale factor" android:key="asc_network_traffic_scale" app:maxValue="10" android:defaultValue="10"/>
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference android:title="Separate colors for elements" android:key="asc_network_traffic_global_color" android:defaultValue="true" android:summaryOn="All elements can be colored separately" android:summaryOff="Global color will apply to all elements" app:isSilent="false" app:packageNameToKill="com.android.systemui"/>/>
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Global color" android:key="asc_network_traffic_color" android:defaultValue="#ffffff" app:isSilent="false" app:packageNameToKill="com.android.systemui"/>/>
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Upload text color" android:defaultValue="#ffffff" android:key="asc_network_traffic_upload_color" app:isSilent="false" app:packageNameToKill="com.android.systemui"/>/>
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Download text color" android:defaultValue="#ffffff" android:key="asc_network_traffic_download_color" app:isSilent="false" app:packageNameToKill="com.android.systemui"/>/>
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Traffic arrows color" android:key="asc_network_traffic_arrow_color" android:defaultValue="#ffffff" app:isSilent="false" app:packageNameToKill="com.android.systemui"/>/>
        </PreferenceScreen>
    </PreferenceScreen>


<!--Expanded Statusbar-->
    <PreferenceScreen android:icon="@drawable/ic_expandedstatusbar" android:title="Expanded Statusbar" android:summary="Backgound Colors.....">
        <com.wubydax.romcontrol.v2.prefs.ImageHeaderPreference app:imageSource="@drawable/android"/>
        <PreferenceCategory  android:title="Background colors">
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference android:title="Expanded view background color" android:key="asc_expanded_switch_bg" android:summaryOn="enabled" android:summaryOff="disabled" android:defaultValue="false" app:isSilent="false" app:packageNameToKill="com.android.systemui"/>
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Header" android:key="asc_header" android:dependency="asc_expanded_switch_bg" android:defaultValue="\#ffffffff" app:isSilent="false" app:packageNameToKill="com.android.systemui"/>
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Search bar" android:key="asc_qs_sfinder_bar_bg" android:dependency="asc_expanded_switch_bg" android:defaultValue="\#ffffffff" app:isSilent="false" app:packageNameToKill="com.android.systemui"/>
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Quick toggles" android:key="asc_quick_qs_panel" android:dependency="asc_expanded_switch_bg" android:defaultValue="\#ffffffff" app:isSilent="false" app:packageNameToKill="com.android.systemui"/>
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Quick settings and brightness" android:key="asc_quick_settings_container" android:dependency="asc_expanded_switch_bg" android:defaultValue="\#ffffffff" app:isSilent="false" app:packageNameToKill="com.android.systemui"/>
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Data Usage" android:key="asc_data_usage_view" android:dependency="asc_expanded_switch_bg" android:defaultValue="\#ffffffff" app:isSilent="false" app:packageNameToKill="com.android.systemui"/>
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="QS Detail" android:key="asc_qsdetail" android:dependency="asc_expanded_switch_bg" android:defaultValue="\#ffffffff" app:isSilent="false" app:packageNameToKill="com.android.systemui"/>
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="QS Customize" android:key="asc_qs_customize" android:dependency="asc_expanded_switch_bg" android:defaultValue="\#ffffffff" app:isSilent="false" app:packageNameToKill="com.android.systemui"/>
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Notification Background Color" android:key="asc_notification_bg_color" android:dependency="asc_expanded_switch_bg" android:defaultValue="\#ffffffff"  app:isSilent="false" app:packageNameToKill="com.android.systemui"/>
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Notification Bottom" android:key="asc_notification_bottom_normal_mode" android:dependency="asc_expanded_switch_bg" android:defaultValue="\#ffffffff" app:isSilent="false" app:packageNameToKill="com.android.systemui"/>
        </PreferenceCategory>
    </PreferenceScreen>


<!--IncallUI-->
    <PreferenceScreen android:icon="@drawable/ic_phone1" android:title="InCallUI" android:summary="Custom Backgound.....">
        <com.wubydax.romcontrol.v2.prefs.ImageHeaderPreference app:imageSource="@drawable/android"/>
        <com.wubydax.romcontrol.v2.prefs.MySwitchPreference android:defaultValue="false" android:key="asc_enable_gear_custom_bg" android:summaryOff="Disabled" android:summaryOn="Enabled" android:title="Enable custom background"/>
        <PreferenceCategory android:dependency="asc_enable_gear_custom_bg" android:title="General bg preferences">
            <com.wubydax.romcontrol.v2.prefs.MyListPreference android:defaultValue="0" android:entries="@array/custom_bg_type_entries" android:entryValues="@array/custom_bg_type_values" android:key="asc_gear_custom_bg_type" android:title="Background type" app:dependentValue="0"/>
            <com.wubydax.romcontrol.v2.prefs.MySeekBarPreference android:defaultValue="255" android:key="asc_gear_bg_opacity" android:title="Background opacity" app:maxValue="255" app:minValue="0"/>
        </PreferenceCategory>
        <PreferenceCategory android:dependency="asc_enable_gear_custom_bg" android:title="Custom image preferences">
            <com.wubydax.romcontrol.v2.prefs.UriSelectionPreference android:key="asc_gear_bg_image_uri" android:title="Select Bg image"/>
            <com.wubydax.romcontrol.v2.prefs.MyListPreference android:defaultValue="0" android:entries="@array/crop_entries" android:entryValues="@array/crop_values" android:key="asc_gear_bg_crop_type" android:title="Set Image Scaling Type"/>
        </PreferenceCategory>
        <PreferenceCategory android:dependency="asc_enable_gear_custom_bg" android:title="Color and gradient preferences">
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:defaultValue="#00000000" android:dependency="asc_gear_custom_bg_type" android:key="asc_gear_bg_primary_color" android:title="Select primary color"/>
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:defaultValue="#00000000" android:dependency="asc_gear_custom_bg_type" android:key="asc_gear_second_gradient_color" android:title="Secondary Color (for gradient)"/>
            <com.wubydax.romcontrol.v2.prefs.MyListPreference android:defaultValue="0" android:dependency="asc_gear_custom_bg_type" android:entries="@array/gradient_entries" android:entryValues="@array/gradient_values" android:key="asc_gear_bg_gradient_orientation" android:title="Gradient orientation"/>
        </PreferenceCategory>
    </PreferenceScreen>



<!--Extended Power Menu-->
    <PreferenceScreen android:icon="@drawable/ic_power" android:title="Extended Power Menu" android:summary="Show/Hide Buttons.....">
        <com.wubydax.romcontrol.v2.prefs.ImageHeaderPreference app:imageSource="@drawable/android"/>
        <PreferenceCategory android:title="Show/Hide Buttons">
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference android:title="Reboot Recovery Button" android:key="asc_reboot_recovery" android:defaultValue="true" android:summaryOn="Reboot Recovery will be shown" android:summaryOff="Currently removed" />
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference android:title="Power off" android:key="asc_power_menu_power" android:defaultValue="true" android:summaryOn="Power off mode will be shown" android:summaryOff="Currently removed" />
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference android:title="Emergency Mode Button" android:key="asc_power_emergency" android:defaultValue="true" android:summaryOn="Emergency mode will be shown" android:summaryOff="Currently removed" />
        </PreferenceCategory>
    </PreferenceScreen>

<!--Recents Settings Menu-->
    <PreferenceScreen android:icon="@drawable/ic_advanced" android:title="Recents Settings Menu" android:summary="Matrix.....">
        <com.wubydax.romcontrol.v2.prefs.ImageHeaderPreference app:imageSource="@drawable/android"/>
        <PreferenceCategory android:title="Matrix Animations Features" android:summary="Matrix Options" >
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference android:title="Matrix Recents Animation" android:key="asc_matrix_anim" android:summaryOn="Enabled " android:summaryOff="Disabled"  />
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Matrix Text Colorized" android:dependency="asc_matrix_anim" android:summary="Choose Matrix Text color" android:key="recents_matrix_anim_text_color" android:defaultValue="#1eff00" app:packageNameToKill="com.android.systemui" app:isSilent="false"/>
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference android:title="Matrix BG Color" android:dependency="asc_matrix_anim" android:summary="Choose Matrix BG color" android:key="recents_matrix_anim_bg_color" android:defaultValue="#ff000000" app:packageNameToKill="com.android.systemui" app:isSilent="false"/>
            <com.wubydax.romcontrol.v2.prefs.MySeekBarPreference app:maxValue="100" android:title="Matrix Text Transparency" android:dependency="asc_matrix_anim" android:key="recents_matrix_anim_text_alpha" android:defaultValue="100" app:minValue="50" app:unitsValue="" app:packageNameToKill="com.android.systemui" app:isSilent="false"/>
            <com.wubydax.romcontrol.v2.prefs.MySeekBarPreference app:maxValue="100" android:title="Matrix Text Font Size" android:dependency="asc_matrix_anim" android:key="recents_matrix_anim_font_size" android:defaultValue="46" app:minValue="20" app:unitsValue="" app:packageNameToKill="com.android.systemui" app:isSilent="false"/>
            <com.wubydax.romcontrol.v2.prefs.MySeekBarPreference app:maxValue="100" android:title="Matrix Frequency" android:dependency="asc_matrix_anim" android:key="recents_matrix_anim_frequency" android:defaultValue="16" app:minValue="1" app:unitsValue="" app:packageNameToKill="com.android.systemui" app:isSilent="false"/>
        </PreferenceCategory>
    </PreferenceScreen>



<!--Advanced Settings Menu-->
    <PreferenceScreen android:icon="@drawable/ic_advanced" android:title="Advanced Settings Menu" android:summary="USB, Viper, Dolby .....">
        <com.wubydax.romcontrol.v2.prefs.ImageHeaderPreference app:imageSource="@drawable/android"/>
        <PreferenceCategory android:title="USB"  />
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference android:title="USB plug in/out wakeup" android:key="asc_usb_plugged" android:defaultValue="true" android:summaryOn="On" android:summaryOff="Off" />
        <PreferenceCategory android:title="Apps"  />
        <com.wubydax.romcontrol.v2.prefs.OpenAppPreference android:summary="" app:componentName="com.audlabs.viperfx/com.audlabs.viperfx.main.MainActivity" />
        <com.wubydax.romcontrol.v2.prefs.OpenAppPreference android:summary="" app:componentName="com.atmos.daxappUI/com.atmos.daxappUI.MainActivity" />

    </PreferenceScreen>

</PreferenceScreen>